{
  "realm": "agency-alpha",
  "enabled": true,
  "displayName": "Agency Alpha",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "sslRequired": "none",
  "accessTokenLifespan": 1800,
  "roles": {
    "realm": [
      { "name": "viewer", "description": "Can view unclassified and authorized data" },
      { "name": "analyst", "description": "Can view and analyze data within clearance" },
      { "name": "manager", "description": "Can manage records and approve need-to-know" },
      { "name": "admin", "description": "Full system administration" },
      { "name": "auditor", "description": "Can view all audit logs" }
    ]
  },
  "clientScopes": [
    {
      "name": "security-attributes",
      "description": "Maps security clearance attributes to token claims",
      "protocol": "openid-connect",
      "attributes": { "include.in.token.scope": "true" },
      "protocolMappers": [
        {
          "name": "clearance_level",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "clearance_level",
            "claim.name": "clearance_level",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "jsonType.label": "String"
          }
        },
        {
          "name": "compartments",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "compartments",
            "claim.name": "compartments",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "jsonType.label": "String"
          }
        },
        {
          "name": "organization",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "organization",
            "claim.name": "organization",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "jsonType.label": "String"
          }
        }
      ]
    }
  ],
  "defaultDefaultClientScopes": [
    "web-origins",
    "acr",
    "profile",
    "roles",
    "email",
    "security-attributes"
  ],
  "clients": [
    {
      "clientId": "frontend-app",
      "name": "Security Demo Frontend",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:5173/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:5173"
      ],
      "protocol": "openid-connect",
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email",
        "security-attributes"
      ]
    },
    {
      "clientId": "backend-api",
      "name": "Security Demo Backend",
      "enabled": true,
      "bearerOnly": true,
      "protocol": "openid-connect",
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email",
        "security-attributes"
      ]
    }
  ],
